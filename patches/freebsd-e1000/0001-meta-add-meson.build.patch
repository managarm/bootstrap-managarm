From 13bdf14e78f943422392c176235fafa7e3589d73 Mon Sep 17 00:00:00 2001
From: no92 <no92.mail@gmail.com>
Date: Wed, 21 Aug 2024 00:16:01 +0200
Subject: [PATCH] meta: add meson.build

---
 meson.build | 55 +++++++++++++++++++++++++++++++++++++++++++++++++++++
 1 file changed, 55 insertions(+)
 create mode 100644 meson.build

diff --git a/meson.build b/meson.build
new file mode 100644
index 0000000..1e8c9ca
--- /dev/null
+++ b/meson.build
@@ -0,0 +1,55 @@
+project('freebsd-e1000', ['c'])
+
+pkg = import('pkgconfig')
+
+inc = include_directories('.')
+
+src = files(
+	'e1000_mbx.c',
+	'e1000_82542.c',
+	'e1000_phy.c',
+	'e1000_82543.c',
+	'e1000_ich8lan.c',
+	'e1000_82575.c',
+	'e1000_82540.c',
+	'e1000_i210.c',
+	'e1000_82541.c',
+	'e1000_api.c',
+	'e1000_manage.c',
+	'e1000_vf.c',
+	'e1000_mac.c',
+	'e1000_82571.c',
+	'e1000_base.c',
+	'e1000_nvm.c',
+	'e1000_80003es2lan.c',
+)
+
+public_headers = files(
+	'e1000_80003es2lan.h',
+	'e1000_82541.h',
+	'e1000_82543.h',
+	'e1000_82571.h',
+	'e1000_82575.h',
+	'e1000_api.h',
+	'e1000_base.h',
+	'e1000_defines.h',
+	'e1000_hw.h',
+	'e1000_i210.h',
+	'e1000_ich8lan.h',
+	'e1000_mac.h',
+	'e1000_manage.h',
+	'e1000_mbx.h',
+	'e1000_nvm.h',
+	'e1000_phy.h',
+	'e1000_regs.h',
+)
+
+lib = static_library('e1000-freebsd', src,
+	c_args : ['-Wno-implicit-fallthrough', '-Wno-unused-parameter'],
+	include_directories : [ inc ],
+	install : true,
+)
+
+install_headers(public_headers)
+
+pkg.generate(lib)
-- 
